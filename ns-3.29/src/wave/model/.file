							trace(p,index,nxt,CURRENT_TIME + interval);
							SchedulePacket(tnode,p,interval);
						}
					}
				}
			}
		}
		else
		{
			nsaddr_t nxt = packet->nextHop;
			if(packet->Broadcast == 1)
			{
				double	x1 = get_x();
