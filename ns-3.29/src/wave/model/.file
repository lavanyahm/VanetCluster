				double	y1 = get_y();
	
				vanetRouting * tnode = get_vanet_by_address(nxt);
	
				double	x2 = get_x(tnode->index);
				double	y2 = get_y(tnode->index);

				double	dist = distance(x1,y1,x2,y2);
